@{
    ViewData["Title"] = "Home Page";
}

@section Scripts
    {
    <script src="~/lib/angular/angular.min.js"></script>
    <script src="~/js/image.js"></script>
    <script src="~/js/imageController.js"></script>
}

<div class="row" ng-app="images">
    <div ng-controller="imageController as vm">
        <div class="col-md-6 col-md-offset-3">
            <form novalidate name="newImageForm" ng-submit="vm.addImage()">
                <div class="form-group">
                    <input type="file" ng-model="vm.newImage.data" app-filereader required>
                </div>
                <div class="form-group">
                    <input type="submit" value="Upload" ng-disabled="newImageForm.$invalid" />
                </div>
            </form>
            <img ng-src="{{vm.newImage.data}}">

        </div>

        

        <div class="container">
            <div ng-repeat="image in vm.images">
                <img ng-src="{{image.data}}"/>
            </div>
        </div>
    </div>
</div>